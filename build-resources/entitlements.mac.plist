<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Network access for API calls and WebSocket connections -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Server functionality for local Express server -->
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- File system access for local storage and backups -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Printer access for receipts -->
    <key>com.apple.security.print</key>
    <true/>
    
    <!-- USB access for POS hardware -->
    <key>com.apple.security.device.usb</key>
    <true/>
    
    <!-- Camera access for barcode scanning -->
    <key>com.apple.security.device.camera</key>
    <true/>
    
    <!-- Microphone access for voice commands (optional) -->
    <key>com.apple.security.device.microphone</key>
    <true/>
    
    <!-- Bluetooth access for wireless peripherals -->
    <key>com.apple.security.device.bluetooth</key>
    <true/>
    
    <!-- Location services for delivery tracking -->
    <key>com.apple.security.personal-information.location</key>
    <true/>
    
    <!-- Address book access for customer management -->
    <key>com.apple.security.personal-information.addressbook</key>
    <true/>
    
    <!-- Disable App Sandbox for full system access -->
    <key>com.apple.security.app-sandbox</key>
    <false/>
    
    <!-- Allow unsigned executable memory (for Node.js) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Allow DYLD environment variables -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
    
    <!-- Allow JIT compilation for Node.js -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Disable library validation for third-party modules -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
</dict>
</plist>